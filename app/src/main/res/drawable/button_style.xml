<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#edd170"
                android:endColor="#1ecfd6"
                android:startColor="#1ecfd6"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#c05640"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#edd170"
                android:endColor="#1ecfd6"
                android:startColor="#1ecfd6"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#c05640"/>
            <corners
                android:radius="8dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#70c05640"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="#70edd170"
                android:endColor="#701ecfd6"
                android:startColor="#701ecfd6"
                android:type="linear"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>
</selector>